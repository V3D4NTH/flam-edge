{
  "name": "flam-edge-web-viewer",
  "version": "1.0.0",
  "description": "TypeScript-based web viewer for flam-edge Android app processed frames",
  "main": "dist/bundle.js",
  "scripts": {
    "build": "tsc && webpack",
    "build:tsc": "tsc",
    "watch": "tsc --watch",
